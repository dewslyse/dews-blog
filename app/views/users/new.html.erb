<h1 class="text-center mb-3">Sign Up</h1>

<%= render 'shared/errors', obj: @user %>

<%= form_with model: @user, data: {turbo: false} do |f| %>
  <div class="row mb-3">
    <div class="col-sm-2 col-form-label">
      <%= f.label :username %>
    </div>    
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email %>
    </div>    
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password %>
    </div>    
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="offset-md-2 col-sm-10">
      <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="row mb-3">
  <div class="offset-md-2 col-sm-10">
    <%= link_to 'Cancel request and return to articles listing', articles_path %>
  </div>
</div>
