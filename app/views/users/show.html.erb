<h1 class="text-center mb-3">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
  <div class="col-md-4 offset-md-4 text-center">
    <%= gravatar_for(@user) %>
  </div>
</div>

<h3 class="text-center mb-4"><%= @user.username %>'s articles</h3>

<% if @user.articles.any? %>
  <%= render 'articles/article', obj: @user_articles %>
<% else %>
  <p class="text-center">This user has not written any articles yet</p>
<% end %>

<div class="mt-5 d-flex justify-content-center">
  <%= will_paginate(@user_articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
